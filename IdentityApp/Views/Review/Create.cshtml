@model Review

<form asp-controller="Review" asp-action="Create">

  <div class="form-row">
    <input type="text" hidden value="@Model.ProductID" asp-for="ProductID">
        <input type="text" hidden value="@Model.UserId" asp-for="UserId">

    <div class="form-group col-md-6">
      <label for="inputEmail4">Type your review...</label>
      <input type="text" class="form-control"  asp-for="Body">
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <select asp-for="Rating" class="form-control">
            <option selected>Choose Rating</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>  
  </div>

  <button type="submit" class="btn btn-primary">Submit Review</button>
</form>