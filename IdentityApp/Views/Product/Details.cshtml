                        <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#myModal">Add Review</button>

                            <!-- Modal -->
                            <div class="modal fade" id="myModal" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <form asp-controller="Review" asp-action="Create">

                                                <div class="form-row">
                                                    <input type="text" hidden value="@Model.Product.ProductID" asp-for="@Model.ReviewForm.ProductID">
                                                    <input type="text" hidden value="@Model.CurrentUser.Id" asp-for="@Model.ReviewForm.UserId">

                                                    <div class="form-group col-md-12">
                                                        <label for="inputEmail4">Type your review...</label>
                                                        <textarea type="text" class="form-control" asp-for="@Model.ReviewForm.Body"></textarea>
                                                    </div>

                                                    <div class="form-group col-md-12">
                                                        <label asp-for="@Model.ReviewForm.Rating" class="control-label"></label>
                                                        <select asp-for="@Model.ReviewForm.Rating" class="form-control col-md-12">
                                                            <option selected>Choose Rating</option>
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                            <option value="5">5</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-primary">Submit Review</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
                    <div class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
                        <div class="row">
                            <div class="col-md-12">
                                   @foreach (var review in Model.Reviews)
                                        {
                                <div class="post-content">
                                    <div class="post-container">
                                      
                                            <img src="@review.AppUser.ProfilePicture"   alt="user" class="profile-photo-md pull-left">
                                            <div class="post-detail"   >
                                            <div class="user-info">
                                                <h5><a href="timeline.html" class="profile-link">@review.AppUser.UserName</a> <span class="following">following</span></h5>
                                                @*<p class="text-muted">Published a photo about 3 mins ago</p>*@
                                            </div>
                                            <div class="reaction">
                                                    @*<a class="btn text-green"><i class="fa fa-thumbs-up"></i>@Model.Likes.Count(x => x.ReviewID == review.ID)</a>*@
                                                    <form asp-asp-controller="Product" asp-action="CreateRating">

                                                        <input asp-for="LikeForm.ReviewID" hidden value="@review.ID">
                                                        <input asp-for="@Model.RatingOption" hidden value="1">
                                                        <input asp-for="@Model.Product.ProductID" hidden value="@Model.Product.ProductID">
                                                        <button style="cursor: pointer;border: 0px solid #3498db;background-color: transparent;" type="submit">

                                                            <i class="fa fa-thumbs-up" style="color:green;"></i> @Model.Likes.Count(x => x.ReviewID == review.ID)
                                                        </button>

                                                    </form>
                                                    <form asp-asp-controller="Product" asp-action="CreateRating">

                                                        <input asp-for="DislikeForm.ReviewID" hidden value="@review.ID">
                                                        <input asp-for="@Model.RatingOption" hidden value="2">
                                                        <input asp-for="@Model.Product.ProductID" hidden value="@Model.Product.ProductID">
                                                        <button style="cursor: pointer;border: 0px solid #3498db;background-color: transparent;" type="submit">

                                                            <i class="fa fa-thumbs-down" style="color:red;"></i> @Model.Dislikes.Count(x => x.ReviewID == review.ID)
                                                        </button>

                                                    </form>
                                                    @*<a class="btn text-red"><i class="fa fa-thumbs-down"></i> @Model.Dislikes.Count(x => x.ReviewID == review.ID)</a>*@
                                            </div>
                                            <div class="line-divider"></div>
                                            <div class="post-text">
                                                <p>@review.Body <i class="em em-anguished"></i> <i class="em em-anguished"></i> <i class="em em-anguished"></i></p>
                                            </div>
                                            <div class="line-divider"></div>

                                                @if(Model.CommentsForReviews.Count(x => x.ReviewID == review.ID) != 0)
                                                {
                                                    <p>
                                                    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                                                        Load Comments
                                                    </a>
                                                    
                                                </p>
                                                }
                                                 
                                                <div class="collapse" id="collapseExample">
                                                    <div class="card card-body">
                                                        @foreach (var item in Model.CommentsForReviews.Where(x => x.ReviewID == review.ID))
                                                        {
                                                            <div class="post-comment">
                                                                <img src="@item.AppUser.ProfilePicture" alt="" class="profile-photo-sm">
                                                                <p><a href="timeline.html" class="profile-link">@item.AppUser.UserName </a><i class="em em-laughing"></i>  @item.Body </p>
                                                            </div>
                                                        }
                                                     </div>
                                                </div>
                                             
                                                
                                                <div class="post-comment">
                                                    <img src="@Model.CurrentUser.ProfilePicture" alt="" class="profile-photo-sm">
                                                    @*<input type="text" class="form-control" placeholder="Post a comment">*@
                                                    <form asp-controller="Comment" asp-action="Create">

                                                            <input type="text" hidden value="@review.ProductID" asp-for="@Model.CommentForm.ProductID">
                                                            <input type="text" hidden value="@review.ID" asp-for="@Model.CommentForm.ReviewID">
                                                            <input type="text" hidden value="@Model.CurrentUser.Id" asp-for="@Model.CommentForm.UserId">

                                                            @*<input type="text" style="width:777px" class="form-control" asp-for="@Model.CommentForm.Body" placeholder="Post a comment">*@
                                                        <textarea style="width:777px;   border-radius: 3px;" asp-for="@Model.CommentForm.Body class=" form-control" rows="5" placeholder="My Bio"></textarea>
                                                        <button  type="submit" class="btn btn-primary">Submit Comment</button>
                                                    </form>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                                }


                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
