@model IEnumerable<Product>

<table class="table table-striped table-dark">
    <tr>
        <th>ProductID</th>
        <th>Price</th>
        <th>Name</th>
        <th>Picture</th>
        <th>Stock</th>
        <th>CompanyID</th>
        <th>CategoryID</th>
        <th>UserId</th>
        <th>Archived</th>
        <th>Action</th>
        <th>Action</th>
    </tr>

    @foreach (var product in @Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.Price</td>
            <td>@product.Name</td>
            <td><img style="width: 200px; height: 170px" src="@product.Picture" /></td>
            <td>@product.Stock</td>
            <td>@product.CompanyID</td>
            <td>@product.CategoryID</td>
            <td>@product.UserId</td>
            <td>@product.Archived</td>
            <td><a class="btn btn-info" asp-controller="Product" asp-action="Update" asp-route-productId="@product.ProductID">Update</a></td>
            <td><a class="btn btn-danger" asp-controller="Product" asp-action="ArchiveProduct" asp-route-productId="@product.ProductID">Archive</a></td>
        </tr>
    }
</table>