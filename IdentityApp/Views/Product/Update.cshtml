@model ProductAndCategoryViewModel

<form asp-controller="Product" asp-action="Update">

  <div class="form-row">
    <input hidden value="@Model.Product.ProductID" asp-for="Product.ProductID"/>
    <input hidden value="@Model.Product.RewardPoints" asp-for="Product.RewardPoints"/>
    <input hidden value="@Model.Product.Archived" asp-for="Product.Archived"/>
    <select asp-for="Product.CategoryID"
            asp-items="@(new SelectList(Model.Categories, nameof(Category.ID), nameof(Category.Name)))">
      <option>Please select one</option>
    </select>
    <div class="form-group col-md-6">
      <label for="inputEmail4">Price</label>
      <input type="text" class="form-control" placeholder="Price" asp-for="Product.Price">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Name</label>
      <input type="text" class="form-control" placeholder="Name" asp-for="Product.Name">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Picture</label>
    <input type="text" class="form-control" placeholder="Picture" asp-for="Product.Picture">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Stock</label>
    <input type="text" class="form-control" placeholder="Stock" asp-for="Product.Stock">
  </div>
  <div class="form-group">
    <label for="inputAddress2">CompanyID</label>
    <input type="text" class="form-control" placeholder="CompanyID" asp-for="Product.CompanyID">
  </div>
  <button type="submit" class="btn btn-primary">Update Product</button>
</form>
