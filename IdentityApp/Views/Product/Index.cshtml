@model IEnumerable<Product>

<a class="btn btn-success" asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table table-striped table-dark">
    <tr>
        <th>ProductID</th>
        <th>Price</th>
        <th>Name</th>
        <th>Picture</th>
        <th>Stock</th>
        <th>CompanyID</th>
        <th>UserId</th>
        <th>Action</th>
        <th>Action</th>
        <th>Action</th>
        
    </tr>

    @foreach(var product in @Model)
    {
    <tr>
        <td>@product.ProductID</td>
        <td>@product.Price</td>
        <td>@product.Name</td>
        <td><img style="width: 200px; height: 170px" src="@product.Picture" /></td>
        <td>@product.Stock</td>
        <td>@product.CompanyID</td>
        <td>@product.UserId</td>
        <td><a class="btn btn-primary" asp-controller="Transaction" asp-action="Create" asp-route-productId="@product.ProductID" >Purchase</a></td>
        <td><a class="btn btn-info" asp-controller="Product" asp-action="Details" asp-route-productId="@product.ProductID">Details</a></td>
        <td><a class="btn btn-warning" asp-controller="Review" asp-action="Create" asp-route-productId="@product.ProductID">Add Review</a></td>
        
    </tr>
    }
</table>