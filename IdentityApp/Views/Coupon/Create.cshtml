@model Coupon

<form asp-controller="Coupon" asp-action="Create"> 
  <input type="text" hidden value="true" asp-for="Active"/>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Code</label>
      <input type="text" class="form-control" placeholder="Code" asp-for="Code">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Percentage</label>
      <input type="text" class="form-control" placeholder="Percentage" asp-for="Percentage">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Quantity</label>
    <input type="text" class="form-control" placeholder="Quantity" asp-for="Quantity">
  </div>
  <button type="submit" class="btn btn-primary">Create Coupon</button>
</form>
