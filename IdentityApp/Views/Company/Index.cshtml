@model IEnumerable<Company>
@{
    Layout = null;
}
<a class="btn btn-success" asp-action="Create" asp-controller="Company">Add Company</a>
<table class="table table-striped table dark">
    <tr>
        <th>CompanyID</th>
        <th>Name</th>
        <th>Logo</th>
        <th>TotalSales</th>
        <th>Action</th>
    </tr>

    @foreach (var company in Model)
    {
            <tr>
                <td>@company.CompanyID</td>
                <td>@company.Name</td>
                <td><img class="logo" src="~/EcommerceTemplate/images/@company.Logo" /></td>
                <td>@company.TotalSales</td>
                <td> <a asp-action="Delete" asp-controller="Company" asp-route-companyID="@company.CompanyID">Delete</a></td>
            </tr>
    }
</table>
